<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_wizard" model="ir.ui.view">
        <field name="name">purchase.order.wizard</field>
        <field name="model">purchase.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Upload Purchase Order">
                <group col="4">
                    <field name="upload_file" filename="filename"/>
                    <field name="filename" invisible="1"/>
                </group>
                <footer>
                    <button name="upload_po" string="Upload" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                    or
                    <button name="download_template" string="Download Template" class="oe_read_only btn-success" type="object"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_upload_po" model="ir.actions.act_window">
        <field name="name">Upload Purchase Order</field>
        <field name="res_model">purchase.order.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="view_id" ref="purchase_order_wizard"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_upload_purchase_order"
        name="Upload PO"
        parent="pti_purchase_requisition.menu_purchasing_mass_upload"
        sequence="41"
        action="action_upload_po"
    />
</odoo>